# MultiAgenticSwarm Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# LLM Provider API Keys
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_ORG_ID=org-your-organization-id-here

# Anthropic Configuration  
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your-azure-openai-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# AWS Bedrock Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-here
AWS_SECRET_ACCESS_KEY=your-aws-secret-key-here
AWS_DEFAULT_REGION=us-east-1

# Together AI Configuration
TOGETHER_API_KEY=your-together-ai-key-here

# Hugging Face Configuration
HUGGINGFACE_API_KEY=your-huggingface-token-here

# =============================================================================
# Local LLM Configuration (Ollama)
# =============================================================================

# Ollama Base URL (for local models)
OLLAMA_BASE_URL=http://localhost:11434

# =============================================================================
# Logging Configuration
# =============================================================================

# Default log directory (optional - defaults to ./logs)
LOG_DIRECTORY=./logs

# Log level (optional - defaults to INFO)
LOG_LEVEL=INFO

# Enable JSON structured logs (optional - defaults to true)
ENABLE_JSON_LOGS=true

# =============================================================================
# Web Interface Configuration
# =============================================================================

# Web server host (optional - defaults to 127.0.0.1)
WEB_HOST=127.0.0.1

# Web server port (optional - defaults to 8000)
WEB_PORT=8000

# =============================================================================
# Database Configuration (if using external storage)
# =============================================================================

# Database URL for persistent storage (optional)
# DATABASE_URL=postgresql://user:password@localhost:5432/multiagenticswarm

# =============================================================================
# Development Settings
# =============================================================================

# Enable debug mode (optional - defaults to false)
DEBUG=false

# Enable verbose logging (optional - defaults to false)
VERBOSE=false

# =============================================================================
# Configuration Examples by Use Case
# =============================================================================

# For basic usage with OpenAI:
# OPENAI_API_KEY=sk-your-key-here

# For multi-provider setup:
# OPENAI_API_KEY=sk-your-openai-key-here
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# For enterprise Azure setup:
# AZURE_OPENAI_API_KEY=your-azure-key-here
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# For local development with Ollama:
# OLLAMA_BASE_URL=http://localhost:11434

# =============================================================================
# Security Notes
# =============================================================================

# 1. Never commit this file with real API keys to version control
# 2. Keep your API keys secure and rotate them regularly
# 3. Use environment-specific .env files for different deployments
# 4. Consider using a secret management service for production
